<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="by.vlfl.fxsuperpro.ui.screens.start.intro.IntroViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/introMainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splash_screen_color"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIntro"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tvIntro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_intro" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvIntro"
            style="@style/TextAppearance.BankPro.Basic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_35"
            android:text="@string/intro__main"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/buttonSingUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivIntro" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSingUp"
            style="@style/TextAppearance.BankPro.Basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="14dp"
            android:layout_marginStart="@dimen/margin_18"
            android:layout_marginEnd="@dimen/margin_18"
            android:layout_marginBottom="@dimen/margin_38"
            android:text="@string/action_sign_up"
            android:onClick="@{() -> vm.openRegister()}"
            android:backgroundTint="@color/gold_400"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>