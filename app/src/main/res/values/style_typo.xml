<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.BankPro.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing">0.02</item>
        <item name="fontFamily">@font/sfpro_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.BankPro.Body2" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">@font/sfpro_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.BankPro.Basic" parent="TextAppearance.MaterialComponents.Body1">
        <item name="lineHeight">@dimen/line_height_22</item>
        <item name="fontFamily">@font/sfpro_display_semibold</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.BankPro.Basic.Button" parent="TextAppearance.MaterialComponents.Body1">
        <item name="lineHeight">@dimen/line_height_22</item>
        <item name="android:fontFamily">@font/sfpro_display_semibold</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.BankPro.Title" parent="TextAppearance.BankPro.Body1">
        <item name="fontFamily">@font/sfpro_display_bold</item>
        <item name="lineHeight">@dimen/line_height_28</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra_2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.BankPro.Label" parent="TextAppearance.BankPro.Body2">
        <item name="lineHeight">@dimen/line_height_24</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:textColor">@color/label_color_dark</item>
        <item name="android:textColorHint">@color/label_color_dark</item>
    </style>

    <style name="TextAppearance.BankPro.SignUp.Step2.TermsAgreement" parent="TextAppearance.BankPro.Body2">
        <item name="lineHeight">@dimen/line_height_18</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/label_color_dark</item>
    </style>

</resources>